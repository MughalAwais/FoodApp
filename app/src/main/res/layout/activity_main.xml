<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:background="@drawable/pic2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:orientation="vertical">


        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/fork"></com.airbnb.lottie.LottieAnimationView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EatNow"
            android:textSize="50dp"
            android:textColor="@color/light_yellow"
            android:fontFamily="@font/montserrat"
            android:textStyle="bold|italic"/>


        <Button
            android:id="@+id/btn_customer"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/light_yellow"
            android:text="Customer"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_restaurant"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_customer"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/light_yellow"
            android:text="Restaurant"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_rider"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_restaurant"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/light_yellow"
            android:text="Delivery"

            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>